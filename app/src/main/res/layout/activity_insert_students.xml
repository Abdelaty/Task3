<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:elevation="6dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/student_name_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="16dp"
            android:text="Student Name:"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/student_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/student_name_lbl"
            android:padding="16dp" />

        <TextView
            android:id="@+id/student_gpa_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_name_lbl"
            android:layout_alignParentLeft="true"
            android:padding="16dp"
            android:text="GPA:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/student_gpa"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_name"
            android:layout_toRightOf="@id/student_name_lbl"
            android:padding="16dp" />

        <TextView
            android:id="@+id/student_id_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_gpa"
            android:layout_alignParentLeft="true"
            android:padding="16dp"
            android:text="Student ID:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/student_id"

            android:layout_width="103dp"
            android:layout_height="67dp"
            android:layout_below="@id/student_gpa"
            android:layout_toRightOf="@id/student_name_lbl"
            android:padding="16dp" />

        <TextView
            android:id="@+id/student_gender_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_id_lbl"
            android:layout_alignParentLeft="true"
            android:padding="16dp"
            android:text="Student Gender:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/student_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_college_lbl"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/student_name_lbl"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="16dp" />

        <TextView
            android:id="@+id/student_password_lbl"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_college_lbl"
            android:layout_alignParentLeft="true"
            android:padding="16dp"
            android:text="Student Password:"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/student_gender"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_id"
            android:layout_toRightOf="@id/student_name_lbl"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/female"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

        </RadioGroup>

        <TextView
            android:id="@+id/student_college_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_gender"
            android:layout_alignParentLeft="true"
            android:padding="16dp"
            android:text="College Name:"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/student_college"

            android:layout_width="209dp"
            android:layout_height="49dp"
            android:layout_below="@id/student_gender"
            android:layout_toRightOf="@id/student_name_lbl"
            android:padding="16dp">

        </Spinner>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Submit" />
    </RelativeLayout>


</android.support.v7.widget.CardView>